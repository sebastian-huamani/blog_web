<%- include("components/header") -%>
<%- include("components/nav") -%>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<div class="container mt-5 vh-100">
    <div class="row justify-content-center">
        <div class="mt-5 col-md-6">
            <div class="card px-5 py-5" id="form1">
            
                <h1 class="text-center mb-5">Crear Cuenta</h1>

                <div class="row">
                    <div class="col-6">
                        <div class="input-group mb-4">
                            <span class="input-group-text" >Nombre</span>
                            <input type="text" class="form-control" placeholder="Alfonso" id="nombre" name="nombre">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" >Password</span>
                            <input type="password" class="form-control" placeholder="*********" id="password" name="password">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group mb-3 w-100">
                            <span class="input-group-text" >Email</span>
                            <input type="email" class="form-control" placeholder="email.com" id="email" name="email">
                        </div>
                    </div>
                   
                </div>

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-primary mt-4" type="button" onclick="registrarme()">Registrarme</button>
                  </div>

            </div>
        </div>
    </div>
</div>



<script>
    function registrarme(){

        var email = $('#email').val();
        var password = $('#password').val();
        var nombre = $('#nombre').val();

        $.ajax({
            url: "/registrarme",
            type: "POST",
            data: `email=${email}&password=${password}&nombre=${nombre}`,
            success: function(data){
                if(data.status){
                    window.location.href = "/iniciar_session";
                }else {
                    console.log(data)
                }
            },
        });
    }
</script>


